 <!DOCTYPE html>
<div class="dropdown" id="customers">
		<button class="dropbtn">
		<a href="/">Back to Directory</a>
	</button>
</div>
<div id="form">
	<div id = "purchaseForm">
		<form action="http://web.engr.oregonstate.edu/~zhangluy/tools/class-content/form_tests/check_request.php" method="get" class="transaction">
			<fieldset>
				<legend>Create a Purchase</legend>
	  			<div>
	    			<label for="vid">Vendor ID:</label>
	    			<select name="vid" id="vid" required>
			  	        <option value="">Select a Vendor</option>
				        {{#each vendors}}
				        <option value="{{this.vendorID}}">{{this.name}}</option>
				        {{/each}}
					</select><br>
	    			<label for="purchaseDate">Date:</label>
					<input type = "date" id="purchaseDate" name="purchaseDate">
	  			</div>
			  	<div>
			    	<button  id="purchaseSubmit" type="button" style="display:block;">Submit</button>
				</div>
			</fieldset>
		</form>
	</div>
	<div id="transactionDisplay" style="display: none;">
		<div id="transactionHeader">
			<table cellpadding="0" cellspacing="0">
				<tr class="top">
					<td colspan="2">
						<table>
							<tr>
								<td>Purchase ID #: </td> 
								<td id="newpurid"></td>
							</tr>
							<tr>
								<td>Purchase Date: </td>
								<td id="newpurchaseDate"></td>
							</tr>
							<tr class="information">
								<td>Vendor ID: </td> 
								<td id="newvid"></td>
							</tr>
							<tr>
								<td>Total Paid: $</td>
								<td id="newtotalPaid"></td>
							</tr>
						</table>
					</td>
				</tr>
			</table>
		</div>
		<div>
			<table class="table">
				<thead>
					<tr class="tRow">
						<th>Product ID</th>
						<th>Unit Cost ($)</th>
						<th>Quantity</th>
						<th>Total Cost ($)</th> 
						<th>Delete?</th>
					</tr>	
				</thead>
				<tbody id="itemizedPurchase">
				</tbody>
			</table>
		</div>
	</div>
	<div id=addProduct style="display: none;">
		<form>
			<fieldset>
				<legend>Add a Product to the Purchase</legend>
				<div>
	    			<label for="pid">Product ID:</label>
	    			<select name="pid" id="pid" required>
			  	        <option value="">Select a Product</option>
				        {{#each products}}
				        <option value="{{this.productID}}">{{this.name}}</option>
				        {{/each}}
					</select><br>
	    			<input id="purid" name="purid" type="hidden">
	    			<label for="quantity">Quantity:</label>
	    			<input type="number" name="quantity" id="quantity" required>
	  			</div>
				<div>
			    	<button  id="itemAdd" type="button" style="display:block;">Submit</button>
				</div>
			</fieldset>
		</form>
	</div>
</div>	
<script src="purchaseCS.js"></script>	