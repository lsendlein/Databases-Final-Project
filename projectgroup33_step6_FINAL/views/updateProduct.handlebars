<!DOCTYPE html>

<div class="dropdown" id="customers">
    <button class="dropbtn">
    <a href="/">Back to Directory</a>
    </button>
</div>

<div id="form">
<form method="get" action="http://flip1.engr.oregonstate.edu:7715/update-product-form">
        <fieldset>
                <legend> Select Product(s) to Update</legend>
                <label for="productID">Product:</label>
                <select name="productID" id="productID">
                        <option value="">Select a Product</option>
                        {{#each products}}
                        <option value="{{this.productID}}">{{this.name}}</option>
                        {{/each}}
                </select>
                <br>
                <label for="vid">Vendor:</label>
                <select name="vid" id="vid">
                        <option value="">Select Products by Vendor</option>
                        {{#each vendors}}
                        <option value="{{this.vendorID}}">{{this.name}}</option>
                        {{/each}}
                </select>
                <br>
                <label for="catid">Category:</label>
                <select name="catid" id="catid">
                        <option value="">Select Products by Category</option>
                        {{#each categories}}
                        <option value="{{this.categoryID}}">{{this.name}}</option>
                        {{/each}}
                </select>
                <br>
                <br>
                <input id="formSubmit" type="submit" name="Display History">Show Products</input>
                <div id="statusUpdate" style="color: white;"></div>
        </fieldset>
</form>
</div>
